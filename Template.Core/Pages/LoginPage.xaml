<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Template.Core.Pages.LoginPage"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:viewModels="clr-namespace:Template.Core.ViewModels;assembly=Template.Core"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    mvx:La.ng="Title Login, FallbackValue=Login"
    x:TypeArguments="viewModels:LoginViewModel">

    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">

        <Label
            FontSize="18"
            TextColor="Black"
            HorizontalOptions="Center"
            VerticalOptions="Center" 
            Text="{mvx:MvxLang Login}"/>

    </StackLayout>

</views:MvxContentPage>